{
	"author": "@drift-labs",
	"license": "MIT",
	"devDependencies": {
		"husky": "^8.0.3",
		"typescript": "^5.1.6"
	},
	"scripts": {
		"lint": "eslint './**/*.{ts,tsx}'",
		"lint:fix": "yarn lint --fix",
		"prepare": "husky install",
		"prettify": "prettier --check './**/*.{ts,tsx}'",
		"prettify:write": "prettier --write './**/*.{ts,tsx}'",
		"typecheck": "tsc --project common-ts --noEmit"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": ""
		}
	},
	"lint-staged": {
		"*.@(ts|tsx)": [
			"yarn lint",
			"yarn prettify"
		]
	},
	"dependencies": {
		"eslint": "^8.44.0",
		"prettier": "^2.8.8"
	}
}
